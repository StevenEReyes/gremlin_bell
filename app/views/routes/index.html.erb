<div class="container mt-4">
  <div class="index-routes">
    <%= render 'shared/logo_btn_top' %>
    <div class="row d-flex justify-content-center">
      <div class="col-10 d-flex">
        <div class="col-11">
          <%= link_to routes_path do %>
            <%= render 'components/search_bar' %>
          <% end %>
        </div>
        <div class="col ms-2 d-flex align-items-center justify-content-center">
          <%= link_to '#' do %>
            <i class="fa-solid fa-bars"></i>
          <% end %>
        </div>
      </div>
    </div>
    <h1 class="mt-4">Routes</h1>
    <div class="container">
      <div class="row">
        <% @routes.each do |route| %>
          <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
            <%= render 'components/route_card', route: route %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>