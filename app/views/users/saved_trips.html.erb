<div class="container mt-5">
  <h1 class="text-center">Saved Trips for <%= @user.first_name.capitalize %></h1>
    <div class="container mt-5">
        <% if @saved_trips.any? %>
          <% @saved_trips.each do |route| %>
           <div class="d-flex flex-column saved-route-card">
            <%= render "components/saved_routes_card", route: route %>
              </div>
            <% end %>
      <% else %>
        <p>No saved trips found.</p>
      <% end %>
    </div>
  </div>
