<div class="bg-red">
  <div class="container pt-2">
    <%= render 'shared/logo_btn_top_white', user: (@user || current_user) %>
    <%= render 'shared/link_user_profile', user: (@user || current_user) %>
  </div>
  <div class="index-routes bg-white mb-4">
    <div class="container">
      <div class="row d-flex justify-content-center">
        <div class="col-10 d-flex">
          <div class="col-11">
            <%= link_to routes_path do %>
              <%= render 'components/search_bar' %>
            <% end %>
          </div>
          <div class="col ms-2 d-flex align-items-center justify-content-center">
            <%= link_to '#' do %>
              <i class="fa-solid fa-bars"></i>
            <% end %>
          </div>
        </div>
      </div>
      <h2 class="mt-4">All Routes</h2>
      <div class="row d-flex justify-content-center">
        <% @routes.each do |route| %>
          <div class="col-11 col-md-4">
            <%= render 'components/route_card', route: route %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>