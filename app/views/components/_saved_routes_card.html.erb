<div class="saved-route-card">
  <%= link_to route_path(route) do %>
    <% if route.photos.any? %>
      <%= cl_image_tag route.photos.first.key, class: "card-img" %>
    <% else %>
      <%= image_tag "route-bg.jpg", class: "card-img" %>
    <% end %>
    <div class="card-body" >
      <h5><%= route.title %></h5>
      <div class="d-flex align-items-center mb-4">
        <i class="fa-solid fa-location-dot"></i>
        <p class='ms-2 pb-0 mb-0'>Japan</p>
      </div>
      <p class="card-text"><%= route.description %></p>
      <div class="mt-2">
        <% route.ride_type.each do |type| %>
          <%= link_to routes_path(query: {ride_type: type }) do %>
            <span class="tag-card me-2"><%= type %></span>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
