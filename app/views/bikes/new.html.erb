<%= simple_form_for [@user, @bike] do |f| %>
  <%= f.input :year, label: 'Year', required: true %>
  <%= f.input :brand, label: 'Brand', required: true %>
  <%= f.input :name, label: 'Name', required: true %>

  <%= f.button :submit, 'Create Bike', class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Back', user_bikes_path(current_user), class: 'btn btn-secondary' %>
