<div class="bg-red">
  <div class="container mb-4">
    <%= render 'shared/logo_btn_top_white' %>
    <%= render 'shared/link_user_profile', user: (@user || current_user) %>
  </div>
  <div class="bg-white">
    <div class="container">
      <h3 class="text-center"><%= @user.first_name %> followers</h3>
      <div class="d-flex justify-content-center mb-4 pt-2">
        <div class="col-10">
          <%= render 'components/search_bar' %>
        </div>
      </div>
      <div class="row">
        <% @followers.each do |user| %>
          <div class="col-6 col-md-4 mb-2">
            <%= render 'user_card', user: user %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>